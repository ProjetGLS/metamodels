<?xml version="1.0" encoding="UTF-8"?>

<project name="${project.model.name}_project" default="${project.model.name}_generateCode">
  <description>Generate Java Code from Ecore model.</description>
  <target name="${project.model.name}_generateCode" description="description">
    <emf.Ecore2Java
      model="${project.model.path}/${project.model.name}.ecore"
      genModel="${project.model.path}/${project.model.name}.genmodel"
      modelProject="${project.target.path}"
      modelProjectFragmentPath="src"

      generateModelProject="true"
      generateEditProject="false"
      generateEditorProject="false"
      generateTestsProject="false"
    >
      <arg line="-package http://www.meta_excel.org/${project.model.name} ${project.model.name} ${project.model.name}"/>
    </emf.Ecore2Java>
  </target>
</project>